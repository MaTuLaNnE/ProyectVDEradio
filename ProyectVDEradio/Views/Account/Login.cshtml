@using ProyectVDEradio.ViewModels;
@model ProyectVDEradio.ViewModels.LoginViewModel
@{
    Layout = null;
    ViewBag.Title = "Login";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="@Url.Content("~/Content/LoginStyles/Login.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <!-- Elementos decorativos de fondo -->
    <div class="bg-decoration"></div>
    <div class="bg-decoration"></div>
    <div class="bg-decoration"></div>

    <div class="login-container">
        <!-- Header -->
        <div class="login-header">
           
            <a href="/" class="logo-link">
                <img src="~/Content/Images/Navbar_Icon.png" alt="Voz del Este" class="logo" height="90px">
            </a>
            <h3>Accede a tu cuenta</h3>
        </div>

        <!-- Formularios -->
        <div class="form-container">

            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "login-form active", id = "loginForm" }))
            {

                @Html.AntiForgeryToken()
                <!-- Formulario de Login -->

                <div class="form-group">
                    <label for="loginUser">Usuario o Email</label>
                    @Html.TextBoxFor(m => m.UsernameOrEmail, new { @class = "form-control", placeholder = "Ingresa tu usuario o email", id = "loginUser", required = "required" })
                    @Html.ValidationMessageFor(m => m.UsernameOrEmail)
                </div>

                <div class="form-group">
                    <label for="loginPass">Contraseña</label>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Ingresa tu contraseña", id = "loginPass", required = "required" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>

                <div class="checkbox-group">
                    <div class="custom-checkbox">
                        <input type="checkbox" id="rememberMe">
                        <span class="checkmark"></span>
                    </div>
                    <label for="rememberMe" class="checkbox-label">Recordar mi sesión</label>
                </div>

                <button type="submit" class="btn-primary">Iniciar Sesión</button>

                if (ViewBag.LoginError != null)
                {
                    <div class="form-error">
                        @ViewBag.LoginError
                    </div>
                }


            }

        </div>
    </div>
</body>
</html>